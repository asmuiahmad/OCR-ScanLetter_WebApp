# =============================================================================
# TESTING ENVIRONMENT CONFIGURATION
# =============================================================================

# Application Settings
FLASK_ENV=testing
DEBUG=False
FLASK_APP=app.py
FLASK_DEBUG=0
TESTING=True

# Test Secret Key
SECRET_KEY=test-secret-key-for-testing-only

# Test Server
HOST=127.0.0.1
PORT=5001

# Database (In-memory SQLite for testing)
DB_ENGINE=sqlite
DB_NAME=:memory:
# Alternative: Use a test database file
# DB_NAME=test.db

# Security (minimal for testing)
WTF_CSRF_ENABLED=False
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True

# File Uploads (test directories)
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=tests/uploads
OCR_UPLOAD_FOLDER=tests/ocr
TEMP_FOLDER=tests/temp
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,pdf,doc,docx

# OCR Settings (mock for testing)
OCR_ENGINE=mock
TESSERACT_CMD=/usr/bin/tesseract
TESSERACT_LANG=ind+eng

# Assets
ASSETS_ROOT=/static/assets

# Logging (minimal for testing)
LOG_LEVEL=ERROR
LOG_FILE=tests/test.log
LOG_TO_FILE=False

# Email (mock for testing)
MAIL_SUPPRESS_SEND=True
MAIL_SERVER=localhost
MAIL_PORT=1025
MAIL_USE_TLS=False
MAIL_USE_SSL=False
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=test@localhost

# Performance (minimal for testing)
DB_POOL_SIZE=1
DB_POOL_TIMEOUT=5

# Development Tools (disabled for testing)
ENABLE_DEBUG_TOOLBAR=False
TEMPLATES_AUTO_RELOAD=False
ENABLE_PROFILING=False