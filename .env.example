# =============================================================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and configure the values for your environment
# 
# SECURITY WARNING: Never commit .env files with real credentials to version control!
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application Environment (development/production/testing)
FLASK_ENV=development

# Debug Mode (True for development, False for production)
DEBUG=True

# Flask Application Entry Point
FLASK_APP=app.py

# Flask Debug Mode (1 for enabled, 0 for disabled)
FLASK_DEBUG=1

# Application Secret Key (REQUIRED - Generate a strong random key)
# You can generate one using: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# Application Host and Port
HOST=127.0.0.1
PORT=5000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database Engine (sqlite/mysql/postgresql)
DB_ENGINE=sqlite

# SQLite Configuration (for development)
DB_NAME=app.db

# MySQL/PostgreSQL Configuration (for production)
# DB_HOST=localhost
# DB_PORT=3306
# DB_USERNAME=your_db_user
# DB_PASS=your_db_password
# DB_NAME=your_db_name

# Database URL (alternative to individual settings)
# DATABASE_URL=sqlite:///app.db
# DATABASE_URL=mysql://user:password@localhost/dbname
# DATABASE_URL=postgresql://user:password@localhost/dbname

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# CSRF Protection
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=3600

# Session Configuration
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Password Hashing
BCRYPT_LOG_ROUNDS=12

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================

# Maximum file size for uploads (in bytes)
MAX_CONTENT_LENGTH=16777216

# Upload folders
UPLOAD_FOLDER=static/uploads
OCR_UPLOAD_FOLDER=static/ocr
TEMP_FOLDER=static/temp

# Allowed file extensions
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,pdf,doc,docx

# =============================================================================
# OCR CONFIGURATION
# =============================================================================

# OCR Engine (tesseract/google_vision/aws_textract)
OCR_ENGINE=tesseract

# Tesseract Configuration
TESSERACT_CMD=/usr/bin/tesseract
TESSERACT_LANG=ind+eng

# Google Vision API (if using Google OCR)
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# AWS Textract Configuration (if using AWS OCR)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Email Settings (for notifications, password reset, etc.)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Default sender
MAIL_DEFAULT_SENDER=your-email@gmail.com

# =============================================================================
# REDIS CONFIGURATION (for caching and sessions)
# =============================================================================

# Redis URL
# REDIS_URL=redis://localhost:6379/0

# Cache Configuration
# CACHE_TYPE=redis
# CACHE_REDIS_URL=redis://localhost:6379/0

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level (DEBUG/INFO/WARNING/ERROR/CRITICAL)
LOG_LEVEL=INFO

# Log File Path
LOG_FILE=logs/app.log

# Enable/Disable File Logging
LOG_TO_FILE=True

# =============================================================================
# STATIC ASSETS
# =============================================================================

# Assets Root (for CDN in production)
ASSETS_ROOT=/static/assets

# CDN URL (for production)
# CDN_DOMAIN=https://your-cdn-domain.com

# =============================================================================
# SOCIAL AUTHENTICATION (Optional)
# =============================================================================

# GitHub OAuth
# GITHUB_ID=your_github_client_id
# GITHUB_SECRET=your_github_client_secret

# Google OAuth
# GOOGLE_ID=your_google_client_id
# GOOGLE_SECRET=your_google_client_secret

# =============================================================================
# API KEYS AND EXTERNAL SERVICES
# =============================================================================

# External API Keys
# OPENAI_API_KEY=your_openai_api_key
# ANTHROPIC_API_KEY=your_anthropic_api_key

# =============================================================================
# PERFORMANCE AND MONITORING
# =============================================================================

# Enable Performance Monitoring
ENABLE_PROFILING=False

# Database Connection Pool
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable Development Tools
ENABLE_DEBUG_TOOLBAR=True

# Auto-reload templates
TEMPLATES_AUTO_RELOAD=True

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Production-specific settings (uncomment for production)
# DEBUG=False
# FLASK_DEBUG=0
# SESSION_COOKIE_SECURE=True
# WTF_CSRF_SSL_STRICT=True
# PREFERRED_URL_SCHEME=https

# =============================================================================
# BACKUP AND MAINTENANCE
# =============================================================================

# Backup Configuration
# BACKUP_FOLDER=backups
# AUTO_BACKUP_ENABLED=True
# BACKUP_RETENTION_DAYS=30

# Maintenance Mode
# MAINTENANCE_MODE=False
# MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.