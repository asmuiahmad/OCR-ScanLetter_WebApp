# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# SECURITY WARNING: Update all default values before deploying to production!
# =============================================================================

# Application Settings
FLASK_ENV=production
DEBUG=False
FLASK_APP=app.py
FLASK_DEBUG=0

# CRITICAL: Generate a strong secret key for production
# python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE-THIS-TO-A-STRONG-SECRET-KEY-IN-PRODUCTION

# Production Server
HOST=0.0.0.0
PORT=5000

# Database (MySQL/PostgreSQL for production)
DB_ENGINE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=your_production_db_user
DB_PASS=your_strong_db_password
DB_NAME=your_production_db_name

# Alternative: Database URL
# DATABASE_URL=mysql://user:password@localhost/dbname

# Security (strict for production)
WTF_CSRF_ENABLED=True
WTF_CSRF_SSL_STRICT=True
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict
PREFERRED_URL_SCHEME=https

# File Uploads
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=/var/www/app/uploads
OCR_UPLOAD_FOLDER=/var/www/app/ocr
TEMP_FOLDER=/var/www/app/temp
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,pdf,doc,docx

# OCR Settings
OCR_ENGINE=tesseract
TESSERACT_CMD=/usr/bin/tesseract
TESSERACT_LANG=ind+eng

# Assets (with CDN)
ASSETS_ROOT=/static/assets
CDN_DOMAIN=https://your-cdn-domain.com

# Logging
LOG_LEVEL=WARNING
LOG_FILE=/var/log/app/app.log
LOG_TO_FILE=True

# Email (Production SMTP)
MAIL_SERVER=smtp.your-domain.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=noreply@your-domain.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=noreply@your-domain.com

# Redis (for production caching)
REDIS_URL=redis://localhost:6379/0
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://localhost:6379/0

# Performance
DB_POOL_SIZE=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Monitoring
ENABLE_PROFILING=False

# Development Tools (disabled in production)
ENABLE_DEBUG_TOOLBAR=False
TEMPLATES_AUTO_RELOAD=False

# Backup
BACKUP_FOLDER=/var/backups/app
AUTO_BACKUP_ENABLED=True
BACKUP_RETENTION_DAYS=30

# Maintenance
MAINTENANCE_MODE=False
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.