# =============================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# =============================================================================

# Application Settings
FLASK_ENV=development
DEBUG=True
FLASK_APP=app.py
FLASK_DEBUG=1

# Generate a new secret key for development
# python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=dev-secret-key-change-this-for-production-use

# Development Server
HOST=127.0.0.1
PORT=5000

# Database (SQLite for development)
DB_ENGINE=sqlite
DB_NAME=app_dev.db

# Security (relaxed for development)
WTF_CSRF_ENABLED=True
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True

# File Uploads
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=static/uploads
OCR_UPLOAD_FOLDER=static/ocr
TEMP_FOLDER=static/temp
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,pdf,doc,docx

# OCR Settings
OCR_ENGINE=tesseract
TESSERACT_CMD=/usr/bin/tesseract
TESSERACT_LANG=ind+eng

# Assets
ASSETS_ROOT=/static/assets

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=logs/app_dev.log
LOG_TO_FILE=True

# Development Tools
ENABLE_DEBUG_TOOLBAR=True
TEMPLATES_AUTO_RELOAD=True
ENABLE_PROFILING=True

# Email (for testing - use console backend)
MAIL_SERVER=localhost
MAIL_PORT=1025
MAIL_USE_TLS=False
MAIL_USE_SSL=False
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=dev@localhost

# Performance
DB_POOL_SIZE=5
DB_POOL_TIMEOUT=30